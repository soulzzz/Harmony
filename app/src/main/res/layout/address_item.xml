<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/halfgray">
    <RelativeLayout
        android:id="@+id/topdiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background"
        android:layout_below="@+id/topdiv">
        <RelativeLayout
            android:id="@+id/blank"
            android:layout_width="80dp"
            android:layout_height="80dp">
           <ImageView
               android:id="@+id/addressselected"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:clickable="true"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:src="@drawable/choose_address"/>
            <ImageView
                android:id="@+id/addressicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_addressicon"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/blank"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <RelativeLayout
                android:id="@+id/selectsetion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user_name"
                    android:textColor="@color/select_play_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/address_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:textStyle="normal"
                    android:text="18396056033"
                    android:textColor="@color/select_play_text_color"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/address_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="2"
                    android:paddingTop="5dip"
                    android:singleLine="false"
                    android:text="Address"
                    android:textColor="@color/select_play_text_color"
                    android:textSize="15sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/editbt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_edit"
                android:layout_marginRight="10dp"
                />


        </RelativeLayout>

        <!--    <View-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="1dp"-->
        <!--        android:layout_marginStart="10dp"-->
        <!--        android:background="@color/select_play_text_color" />-->
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/t2"
        android:layout_marginTop="2dp"
        android:background="@color/halfgray"
        android:layout_width="match_parent"
        android:layout_below="@+id/t1"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2"
        android:background="@drawable/item_background"
        >
        <TextView
            android:id="@+id/deletebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:text="删除"/>
    </RelativeLayout>

</RelativeLayout>


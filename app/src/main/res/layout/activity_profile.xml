<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragment.ProfileFragment" >
    <RelativeLayout
        android:id="@+id/top_div"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/halfwhite">

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/iconsection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/top_div"
        android:background="@color/halfwhite">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_img"
            android:text="Username"
            android:layout_marginTop="30dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/profile_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_below="@+id/profile_username"
            android:text="age"
            android:textColor="#828181"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/password_goto"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_goto" />

    </RelativeLayout>


        <LinearLayout
            android:id="@+id/firstlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/iconsection">

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/item_background"
            android:elevation="3dp">
            <ImageView
                android:id="@+id/tel_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_tel" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="联系电话"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tel_img"
                />



            <TextView
                android:id="@+id/profile_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="手机号"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/tel_img"
                />

            <ImageView
                android:id="@+id/profile_tel_goto"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_goto" />
        </RelativeLayout>



            <RelativeLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="55dp"

                android:layout_marginBottom="2dp"
                android:background="@drawable/item_background"
                android:elevation="3dp">
                <ImageView
                    android:id="@+id/age_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_email"  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="邮箱"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/age_img"
                    />



                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="邮箱"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/age_img"
                    />

                <ImageView
                    android:id="@+id/profile_email_goto"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_goto" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/item_background"
                android:elevation="3dp">
                <ImageView
                    android:id="@+id/address_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_address" />


                <TextView
                    android:id="@+id/profile_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="收货地址"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/address_img"
                    />

                <ImageView
                    android:id="@+id/profile_address_goto"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_goto" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstlinearlayout">
            <RelativeLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="55dp"

                android:layout_marginBottom="12dp"
                android:background="@drawable/item_background"
                android:elevation="3dp">
                <ImageView
                    android:id="@+id/setting_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_setting"  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="设置"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/setting_img"
                    />

                    />

                <ImageView
                    android:id="@+id/setting_goto"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_goto" />
            </RelativeLayout>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/oderline"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/setting_layout"
        android:background="@drawable/round_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myordertext"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:id="@+id/allorder_goto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部订单"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_goto" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myordertext"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
        android:orientation="horizontal"
          >
        <RelativeLayout
            android:id="@+id/waitpurchase"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/item_background">
            <ImageView
                android:id="@+id/waitpurchase_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_waitpay"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/waitpurchase_img"
                android:layout_centerHorizontal="true"
                android:text="待付款"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/waitsend"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/item_background">
                <ImageView
                    android:id="@+id/waitsend_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_waitsend"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/waitsend_img"
                    android:layout_centerHorizontal="true"
                    android:text="待发货"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/waitreceive"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/item_background">
                <ImageView
                    android:id="@+id/waitreceive_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_waitreceive"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/waitreceive_img"
                    android:layout_centerHorizontal="true"
                    android:text="待收货"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/succeedorder"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/item_background">
                <ImageView
                    android:id="@+id/succeedorder_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_success"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/succeedorder_img"
                    android:layout_centerHorizontal="true"
                    android:text="已完成"/>
            </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="20dp"
        android:elevation="3dp">

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_button"
            android:focusable="true"
            android:text="Log out"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="gone"/>
    </RelativeLayout>


</RelativeLayout>